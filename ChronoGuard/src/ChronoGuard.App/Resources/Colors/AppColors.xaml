<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Primary Colors -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#3498DB"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#2980B9"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#85C1E9"/>
    
    <!-- Secondary Colors -->
    <SolidColorBrush x:Key="SecondaryBrush" Color="#95A5A6"/>
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="#7F8C8D"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="#BDC3C7"/>
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#27AE60"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#F39C12"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#E74C3C"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#2C3E50"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#7F8C8D"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="#BDC3C7"/>
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BackgroundAlternateBrush" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="#ECF0F1"/>
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#E5E5E5"/>
    <SolidColorBrush x:Key="BorderAccentBrush" Color="#3498DB"/>
    
    <!-- Temperature Colors -->
    <SolidColorBrush x:Key="WarmTemperatureBrush" Color="#FF6B47"/>
    <SolidColorBrush x:Key="CoolTemperatureBrush" Color="#87CEEB"/>
    
</ResourceDictionary>
